<div>
  <div>
    <h1>
      Task #<%= @the_task.id %> details
    </h1>

    <div>
      <div>
        <a href="/tasks">
          Go back
        </a>
      </div>

      <div>
        <a href="/delete_task/<%= @the_task.id %>">
          Delete task
        </a>
      </div>
    </div>

    <dl>
      <dt>
        User
      </dt>
      <dd>
        <%= @the_task.user_id %>
      </dd>

      <dt>
        Name
      </dt>
      <dd>
        <%= @the_task.name %>
      </dd>

      <dt>
        Category
      </dt>
      <dd>
        <%= @the_task.category %>
      </dd>

      <dt>
        Due date
      </dt>
      <dd>
        <%= @the_task.due_date %>
      </dd>

      <dt>
        Time estimate
      </dt>
      <dd>
        <%= @the_task.time_estimate %>
      </dd>

      <dt>
        Created at
      </dt>
      <dd>
        <%= time_ago_in_words(@the_task.created_at) %> ago
      </dd>

      <dt>
        Updated at
      </dt>
      <dd>
        <%= time_ago_in_words(@the_task.updated_at) %> ago
      </dd>
    </dl>
  </div>
</div>

<hr>


<div>
  <div>
    <h2>
      Edit task
    </h2>

    <form action="/modify_task/<%= @the_task.id %>"  method="post" >
      <div>
        <label for="user_id_box">
          User
        </label>

        <input type="text" id="user_id_box" name="query_user_id" value="<%= @the_task.user_id %>">
      </div>

      <div>
        <label for="name_box">
          Name
        </label>

        <input type="text" id="name_box" name="query_name" value="<%= @the_task.name %>">
      </div>

      <div>
        <label for="category_box">
          Category
        </label>

        <input type="text" id="category_box" name="query_category" value="<%= @the_task.category %>">
      </div>

      <div>
        <label for="due_date_box">
          Due date
        </label>

        <input type="date" id="due_date_box" name="query_due_date" value="<%= @the_task.due_date %>">
      </div>

      <div>
        <label for="time_estimate_box">
          Time estimate
        </label>

        <input type="time" id="time_estimate_box" name="query_time_estimate" value="<%= @the_task.time_estimate %>">
      </div>

      <button>
        Update task
      </button>
    </form>
  </div>
</div>

<hr>
